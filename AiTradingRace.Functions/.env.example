# AI Trading Race - Azure Functions Environment Variables
# Copy this file to local.settings.json for local development

# Note: Azure Functions uses local.settings.json, not .env files
# This is a reference template - see local.settings.json.example in the Functions project

# Database Connection
ConnectionStrings__TradingDb="Server=localhost,1433;Database=AiTradingRace;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=True"

# Function App Settings
FUNCTIONS_WORKER_RUNTIME=dotnet-isolated
AzureWebJobsStorage=UseDevelopmentStorage=true

# Market Data Function Schedule (CRON: every 15 minutes)
MarketDataFunction__Schedule=0 */15 * * * *

# Run Agents Function Schedule (CRON: every 5 minutes)
RunAgentsFunction__Schedule=0 */5 * * * *

# Equity Snapshot Function Schedule (CRON: daily at midnight)
EquitySnapshotFunction__Schedule=0 0 0 * * *

# Llama API
Llama__Provider=Groq
Llama__BaseUrl=https://api.groq.com/openai/v1
Llama__Model=llama-3.3-70b-versatile
Llama__ApiKey=your-groq-api-key-here
Llama__TimeoutSeconds=60

# Custom ML Service
CustomMlAgent__BaseUrl=http://localhost:8000
CustomMlAgent__ApiKey=test-api-key-12345
CustomMlAgent__TimeoutSeconds=60

# CoinGecko API
CoinGecko__ApiKey=
