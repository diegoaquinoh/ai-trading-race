# AI Trading Race - ML Service Environment Variables
# Copy this file to .env and update with your values

# Model Configuration
ML_SERVICE_MODEL_PATH=models/trading_model.pkl
ML_SERVICE_MODEL_VERSION=1.0.0

# Logging
ML_SERVICE_LOG_LEVEL=INFO

# Security
# Generate a secure API key: openssl rand -hex 32
ML_SERVICE_API_KEY=your-secret-api-key-here

# CORS
# Set to specific origin in production (e.g., https://your-frontend.com)
ML_SERVICE_ALLOWED_ORIGIN=*

# Redis Configuration (for idempotency)
ML_SERVICE_REDIS_ENABLED=true
ML_SERVICE_REDIS_HOST=localhost
ML_SERVICE_REDIS_PORT=6379
ML_SERVICE_REDIS_DB=0
ML_SERVICE_REDIS_PASSWORD=
ML_SERVICE_REDIS_TTL_SECONDS=3600

# Production Settings (Azure Container Apps)
# ML_SERVICE_REDIS_HOST=redis-ai-trading-race.redis.cache.windows.net
# ML_SERVICE_REDIS_PORT=6380
# ML_SERVICE_REDIS_PASSWORD=<from-azure-key-vault>
# ML_SERVICE_ALLOWED_ORIGIN=https://your-app.azurestaticapps.net
