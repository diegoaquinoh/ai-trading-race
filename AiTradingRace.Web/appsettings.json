{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Jwt": {
      "Issuer": "ai-trading-race",
      "Audience": "ai-trading-race-api",
      "SecretKey": "",
      "AccessTokenExpirationMinutes": 60,
      "RefreshTokenExpirationDays": 7
    },
    "ApiKey": {
      "HeaderName": "X-API-Key",
      "Enabled": true
    }
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "WindowSeconds": 60,
    "QueueLimit": 10
  },
  "CoinGecko": {
    "BaseUrl": "https://api.coingecko.com/api/v3/",
    "ApiKey": "",
    "TimeoutSeconds": 30,
    "DefaultDays": 1
  },
  "AzureOpenAI": {
    "Endpoint": "",
    "ApiKey": "",
    "GPT4_o_Mini_DeploymentName": "",
    "GPT4_1_nano_DeploymentName": "",
    "Temperature": 0.7,
    "MaxTokens": 500,
    "TimeoutSeconds": 30
  },
  "RiskValidator": {
    "MaxPositionSizePercent": 0.50,
    "MinCashReserve": 100,
    "MaxSingleTradeValue": 25000,
    "MinOrderValue": 10,
    "AllowedAssets": ["BTC", "ETH"],
    "MaxOrdersPerCycle": 5,
    "AllowLeverage": false,
    "MaxSlippagePercent": 0.02
  },
  "CustomMlAgent": {
    "BaseUrl": "http://localhost:8000",
    "TimeoutSeconds": 30,
    "MaxRetries": 2,
    "ApiKey": ""
  },
  "Llama": {
    "Provider": "Groq",
    "BaseUrl": "https://api.groq.com/openai/v1",
    "ApiKey": "",
    "Model": "llama-3.3-70b-versatile",
    "Temperature": 0.3,
    "MaxTokens": 500,
    "TimeoutSeconds": 60,
    "MaxRetries": 3,
    "MinRequestIntervalMs": 1000
  }
}