# AI Trading Race - Backend API Environment Variables
# Copy this file to .env for local development (DO NOT commit .env to git)

# Database Connection
# Local SQL Server
ConnectionStrings__TradingDb="Server=localhost,1433;Database=AiTradingRace;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=True"

# Docker SQL Server (when running backend outside Docker but SQL in Docker)
# ConnectionStrings__TradingDb="Server=localhost,1433;Database=AiTradingRace;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=True"

# Docker Compose (when running backend inside Docker)
# ConnectionStrings__TradingDb="Server=sqlserver,1433;Database=AiTradingRace;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=True"

# Llama API Configuration (via Groq - free tier)
Llama__Provider=Groq
Llama__BaseUrl=https://api.groq.com/openai/v1
Llama__Model=llama-3.3-70b-versatile
Llama__ApiKey=your-groq-api-key-here
Llama__TimeoutSeconds=60
Llama__MaxRetries=3

# CoinGecko API (optional - uses free tier without key)
CoinGecko__ApiKey=

# Custom ML Service
CustomMlAgent__BaseUrl=http://localhost:8000
CustomMlAgent__ApiKey=test-api-key-12345
CustomMlAgent__TimeoutSeconds=60

# Azure OpenAI (Legacy - optional)
AzureOpenAI__Endpoint=
AzureOpenAI__ApiKey=
AzureOpenAI__DeploymentName=

# Logging
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning

# CORS (adjust for your frontend URL)
AllowedOrigins=http://localhost:5173,http://localhost:3000

# Environment
ASPNETCORE_ENVIRONMENT=Development
