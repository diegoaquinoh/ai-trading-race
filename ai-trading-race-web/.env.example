# AI Trading Race - Frontend Environment Variables
# Copy this file to .env for local development

# API Endpoint
# Local development (backend running locally)
VITE_API_URL=http://localhost:5000

# Docker Compose (backend in Docker)
# VITE_API_URL=http://localhost:5000

# Production (when deployed)
# VITE_API_URL=https://your-production-api.com

# WebSocket URL (for future real-time updates)
VITE_WS_URL=ws://localhost:5000/ws

# Feature Flags
VITE_ENABLE_WEBSOCKETS=false
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ADVANCED_CHARTS=true

# Refresh Intervals (milliseconds)
VITE_REFRESH_INTERVAL_MS=30000
VITE_LEADERBOARD_REFRESH_MS=10000

# Environment
NODE_ENV=development
